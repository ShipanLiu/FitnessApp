<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone"
    android:id="@+id/exercise_comment_gone"
    >

    <!-- question 21, free text   -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exercise_video_question1"
        android:textColor="@color/light_red"
        android:textSize="@dimen/small_font_size"
        android:gravity="center"
        android:layout_marginTop="10dp"/>

    <SeekBar
        android:id="@+id/my_exercise_review_seekbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_layout_height"
        android:indeterminate="false"
        android:max="100"
        android:progress="40"
        android:splitTrack="false"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/item_layout_height"
        >

        <!-- question 21, free text   -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/exercise_video_question2"
            android:textColor="@color/light_red"
            android:textSize="@dimen/small_font_size"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/my_exercise_review_edittext"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_layout_height"
            android:background="@drawable/edittext_selector"
            android:layout_marginTop="5dp"
            android:hint="@string/ques_dialog_default_comment"
            android:inputType="text"
            android:maxLength="100"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_update_and_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="30dp"
        android:background="@color/purple_500"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:text="@string/ques_update_and_save_btn">
    </Button>


</LinearLayout>