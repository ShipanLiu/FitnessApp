<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsNotificationTime">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_timePicker_dialog1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/select_the_time_for_notifications"
            android:textSize="16sp" />

        <TimePicker
            android:id="@+id/time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_timeOK1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="@string/confirm"
                style="?android:attr/buttonBarButtonStyle"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_timeOk2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="@string/confirm"
                style="?android:attr/buttonBarButtonStyle"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_timeOK3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="@string/confirm"
                style="?android:attr/buttonBarButtonStyle"/>
        </LinearLayout>

        <TextView
            android:id="@+id/text_timePicker_dialog2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/the_selected_time"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_timePicker_result1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/text_timePicker_result2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/text_timePicker_result3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:textSize="16sp"/>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_returnSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/return_settings"
            android:layout_marginTop="16sp"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>